{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "F-Lang",
  "scopeName": "source.f",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#constants" },
    { "include": "#struct_definition" },
    { "include": "#keywords" },
    { "include": "#array_access" },
    { "include": "#array_constructs" },
    { "include": "#struct_literal" },
    { "include": "#operators" },
    { "include": "#function_calls" },
    { "include": "#types" },
    { "include": "#numbers" },
    { "include": "#property_access" }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.double-slash.f",
      "match": "\\/\\/.*$"
    },
    "constants": {
      "name": "constant.language.f",
      "match": "\\b(true|false|null)\\b"
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.flow.f",
          "match": "\\b(return|defer|if|else|for|in|break|continue|match)\\b"
        },
        {
          "match": "\\b(pub\\s+)?(import)\\s+([a-zA-Z_][a-zA-Z0-9_]*(?:\\.[a-zA-Z_][a-zA-Z0-9_]*)*)",
          "captures": {
            "1": { "name": "storage.modifier.f" },
            "2": { "name": "keyword.control.import.f" },
            "3": { "name": "entity.name.module.f" }
          }
        },
        {
          "name": "storage.modifier.f",
          "match": "\\b(pub)\\b"
        },
        {
          "name": "storage.type.f",
          "match": "\\b(fn|struct|enum|let|const|test)\\b"
        },
        {
          "name": "keyword.operator.cast.f",
          "match": "\\bas\\b"
        },
        {
          "name": "keyword.other.directive.f",
          "match": "#(foreign|intrinsic)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.dereference.f",
          "match": "\\.\\*"
        },
        {
          "name": "keyword.operator.range.f",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.optional-chain.f",
          "match": "\\?\\."
        },
        {
          "name": "keyword.operator.coalesce.f",
          "match": "\\?\\?"
        },
        {
          "name": "keyword.operator.fat-arrow.f",
          "match": "=>"
        },
        {
          "name": "keyword.operator.comparison.f",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.f",
          "match": "(\\+|\\-|\\*|\\/|\\%)"
        },
        {
          "name": "keyword.operator.assignment.f",
          "match": "="
        }
      ]
    },
    "property_access": {
      "patterns": [
        {
          "comment": "Enum variant with payload: Enum.Variant(...)",
          "match": "(\\.)([A-Z][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "punctuation.accessor.f" },
            "2": { "name": "entity.name.type.f" }
          }
        },
        {
          "comment": "Enum variant or type member: Enum.Variant",
          "match": "(\\.)([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "punctuation.accessor.f" },
            "2": { "name": "entity.name.type.f" }
          }
        },
        {
          "comment": "Method call: obj.method(...)",
          "match": "(\\.)([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "punctuation.accessor.f" },
            "2": { "name": "entity.name.function.f" }
          }
        },
        {
          "comment": "Property access: obj.field",
          "match": "(\\.)([a-z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "punctuation.accessor.f" },
            "2": { "name": "variable.property.f" }
          }
        }
      ]
    },
    "struct_definition": {
      "comment": "Struct definition: struct Name { } or struct Name(T) { }",
      "begin": "\\b(struct)\\s+([A-Z][a-zA-Z0-9_]*)(\\([^)]*\\))?\\s*(\\{)",
      "beginCaptures": {
        "1": { "name": "storage.type.f" },
        "2": { "name": "entity.name.type.f" },
        "3": { "name": "storage.type.generic.f" },
        "4": { "name": "punctuation.brace.curly.f" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "punctuation.brace.curly.f" }
      },
      "patterns": [
        { "include": "#comments" },
        {
          "comment": "Field definition: name: Type",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(:)",
          "captures": {
            "1": { "name": "variable.property.f" },
            "2": { "name": "punctuation.separator.type.f" }
          }
        },
        { "include": "#types" },
        { "include": "#keywords" },
        { "include": "#operators" }
      ]
    },
    "types": {
      "patterns": [
        {
          "comment": "Primitive type with optional &, [], ?: &u8[]?",
          "name": "storage.type.primitive.f",
          "match": "&?(i8|i16|i32|i64|isize|u8|u16|u32|u64|usize|f32|f64|bool|void|never)(\\[\\])?\\??"
        },
        {
          "comment": "Generic param with optional &, [], ?: &$T[]?",
          "name": "storage.type.generic.f",
          "match": "&?\\$[a-zA-Z_][a-zA-Z0-9_]*(\\[\\])?\\??"
        },
        {
          "comment": "Named type with optional &, generics, [], ?: &Slice($T)[]?",
          "name": "entity.name.type.f",
          "match": "&?[A-Z][a-zA-Z0-9_]*(\\([^)]*\\)|\\[[^\\]]*\\])?(\\[\\])?\\??"
        }
      ]
    },
    "function_calls": {
      "comment": "Function calls start with lowercase: func(...)",
      "match": "([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()",
      "captures": {
        "1": { "name": "entity.name.function.f" }
      }
    },
    "struct_literal": {
      "name": "meta.struct.literal.f",
      "begin": "(?<!\\)\\s*)\\b([A-Z][a-zA-Z0-9_]*)\\s*(?=\\{)",
      "beginCaptures": {
        "1": { "name": "entity.name.type.f" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "punctuation.brace.curly.f" }
      },
      "patterns": [
        {
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(=)",
          "captures": {
            "1": { "name": "variable.property.f" },
            "2": { "name": "keyword.operator.assignment.f" }
          }
        },
        { "include": "#comments" },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#constants" },
        { "include": "#keywords" },
        { "include": "#operators" },
        { "include": "#function_calls" },
        { "include": "#types" }
      ]
    },
    "array_access": {
      "name": "meta.array.access.f",
      "begin": "(?<=[a-zA-Z0-9_])\\s*(\\[)",
      "end": "(\\])",
      "beginCaptures": {
        "1": { "name": "punctuation.bracket.square.f" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.bracket.square.f" }
      },
      "patterns": [
        { "include": "#numbers" },
        { "include": "#function_calls" }
      ]
    },
    "array_constructs": {
      "name": "meta.array.f",
      "begin": "(\\[)",
      "end": "(\\])",
      "beginCaptures": {
        "1": { "name": "punctuation.bracket.square.f" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.bracket.square.f" }
      },
      "patterns": [
        {
          "name": "meta.array.type.f",
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(;)\\s*(\\d+)",
          "captures": {
            "1": { "name": "entity.name.type.f" },
            "2": { "name": "punctuation.separator.f" },
            "3": { "name": "constant.numeric.integer.f" }
          }
        },
        {
          "name": "meta.array.literal.repeat.f",
          "match": "([\\w\\.\\(\\)\"]+)\\s*(;)\\s*(\\d+)",
          "captures": {
            "1": { "name": "variable.other.f" },
            "2": { "name": "punctuation.separator.f" },
            "3": { "name": "constant.numeric.integer.f" }
          }
        },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#constants" },
        { "include": "#function_calls" }
      ]
    },
    "numbers": {
      "name": "constant.numeric.integer.f",
      "match": "\\b\\d+\\b"
    },
    "strings": {
      "name": "string.quoted.double.f",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        { "include": "#string_escapes" }
      ]
    },
    "string_escapes": {
      "name": "constant.character.escape.f",
      "match": "\\\\(n|t|r|\\\"|\\\\)"
    }
  }
}