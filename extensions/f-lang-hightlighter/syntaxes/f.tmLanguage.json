{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "F-Lang",
  "scopeName": "source.f",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#constants" },
    { "include": "#keywords" },
    { "include": "#array_access" },
    { "include": "#array_constructs" },
    { "include": "#struct_literal" },
    { "include": "#operators" },
    { "include": "#function_calls" },
    { "include": "#types" },
    { "include": "#numbers" },
    { "include": "#property_access" }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.double-slash.f",
      "match": "\\/\\/.*$"
    },
    "constants": {
      "name": "constant.language.boolean.f",
      "match": "\\b(true|false)\\b"
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.flow.f",
          "match": "\\b(return|defer|if|else|for|in|break|continue)\\b"
        },
        {
          "name": "keyword.control.import.f",
          "match": "\\b(import)\\b"
        },
        {
          "name": "storage.modifier.f",
          "match": "\\b(pub)\\b"
        },
        {
          "name": "storage.type.f",
          "match": "\\b(fn|struct|let|const)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.dereference.f",
          "match": "\\.\\*"
        },
        {
          "name": "keyword.operator.range.f",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.address.f",
          "match": "&"
        },
        {
          "name": "keyword.operator.comparison.f",
          "match": "=="
        },
        {
          "name": "keyword.operator.arithmetic.f",
          "match": "(\\+|\\-|\\*|\\/|\\%)"
        },
        {
          "name": "keyword.operator.assignment.f",
          "match": "="
        }
      ]
    },
    "property_access": {
      "match": "(\\.)([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "punctuation.accessor.f" },
        "2": { "name": "variable.property.f" }
      }
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.f",
          "match": "\\b(i32)\\b"
        },
        {
          "name": "entity.name.type.f",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b"
        }
      ]
    },
    "function_calls": {
      "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
      "captures": {
        "1": { "name": "entity.name.function.f" }
      }
    },
    "struct_literal": {
      "name": "meta.struct.literal.f",
      "begin": "\\b([A-Z][a-zA-Z0-9_]*)\\s*(?=\\{)",
      "beginCaptures": {
        "1": { "name": "entity.name.type.f" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "punctuation.brace.curly.f" }
      },
      "patterns": [
        {
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(:)",
          "captures": {
            "1": { "name": "variable.property.f" },
            "2": { "name": "punctuation.separator.key-value.f" }
          }
        },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#constants" },
        { "include": "#function_calls" },
        { "include": "#types" }
      ]
    },
    "array_access": {
      "name": "meta.array.access.f",
      "begin": "(?<=[a-zA-Z0-9_])\\s*(\\[)",
      "end": "(\\])",
      "beginCaptures": {
        "1": { "name": "punctuation.bracket.square.f" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.bracket.square.f" }
      },
      "patterns": [
        { "include": "#numbers" },
        { "include": "#function_calls" }
      ]
    },
    "array_constructs": {
      "name": "meta.array.f",
      "begin": "(\\[)",
      "end": "(\\])",
      "beginCaptures": {
        "1": { "name": "punctuation.bracket.square.f" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.bracket.square.f" }
      },
      "patterns": [
        {
          "name": "meta.array.type.f",
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*(;)\\s*(\\d+)",
          "captures": {
            "1": { "name": "entity.name.type.f" },
            "2": { "name": "punctuation.separator.f" },
            "3": { "name": "constant.numeric.integer.f" }
          }
        },
        {
          "name": "meta.array.literal.repeat.f",
          "match": "([\\w\\.\\(\\)\"]+)\\s*(;)\\s*(\\d+)",
          "captures": {
            "1": { "name": "variable.other.f" },
            "2": { "name": "punctuation.separator.f" },
            "3": { "name": "constant.numeric.integer.f" }
          }
        },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#constants" },
        { "include": "#function_calls" }
      ]
    },
    "numbers": {
      "name": "constant.numeric.integer.f",
      "match": "\\b\\d+\\b"
    },
    "strings": {
      "name": "string.quoted.double.f",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        { "include": "#string_escapes" }
      ]
    },
    "string_escapes": {
      "name": "constant.character.escape.f",
      "match": "\\\\(n|t|r|\\\"|\\\\)"
    }
  }
}